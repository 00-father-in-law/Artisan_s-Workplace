<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recruitmentPeriod"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/establishment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        android:text="사업장 명"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recruitmentperiod_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="모집 기간"
        app:layout_constraintStart_toStartOf="@+id/establishment_tv"
        app:layout_constraintTop_toBottomOf="@+id/establishment_tv" />

    <TextView
        android:id="@+id/address_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:text="근무 지역"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/wage_tv"
        app:layout_constraintStart_toStartOf="@+id/recruitmentperiod_tv"
        app:layout_constraintTop_toBottomOf="@+id/recruitmentperiod_tv" />

    <TextView
        android:id="@+id/wages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="10010201원"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/address_tv"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/wage_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="16dp"
        android:textColor="@color/darkskyblue"
        android:text="임금"
        app:layout_constraintBottom_toBottomOf="@+id/wages"
        app:layout_constraintEnd_toStartOf="@+id/wages"
        app:layout_constraintTop_toTopOf="@+id/wages" />
</androidx.constraintlayout.widget.ConstraintLayout>