<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingHorizontal="14dp"
    android:paddingVertical="17dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black_sub"
            android:id="@+id/listitem_orgNm_talentshare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="수행기관 명"
            android:maxLines="1"
            android:layout_weight="1"/>

        <ImageButton
            android:background="@drawable/img_hearf_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:textSize="16dp"
        android:textColor="@color/black_sub"
        android:id="@+id/listitem_proNm_talentshare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:text="프로젝트 이름"/>


    <TextView
        android:textSize="16dp"
        android:textColor="@color/black_sub"
        android:id="@+id/listitem_notiDate_telentshare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="모집기간"/>

    <TextView
        android:textSize="16dp"
        android:textColor="@color/darkskyblue"
        android:id="@+id/listitem_proDate_talentshare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="사업 기간"/>
</LinearLayout>