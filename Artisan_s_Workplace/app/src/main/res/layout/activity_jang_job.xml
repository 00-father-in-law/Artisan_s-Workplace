<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Jang_jobActivity"
    tools:ignore="UselessParent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp">

        <ImageButton
            android:id="@+id/Jang_Job_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/img_back"/>

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black_sub"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검색" />


    </LinearLayout>
    <LinearLayout
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"/>
    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/talent_share_btnlayout"
            android:paddingLeft="18dp" android:paddingRight="18dp"
            android:layout_width="wrap_content" android:layout_height="match_parent">

            <Button
                android:textColor="#74b1c5"
                android:id="@+id/jang_contRegn1"
                android:background="@drawable/circularbtn_white"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginRight="10dp"
                android:text="도"/>

            <Button
                android:textColor="#74b1c5"
                android:id="@+id/talent_share_contRegn2"
                android:background="@drawable/circularbtn_white"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginRight="10dp"
                android:text="+"/>

            <Button
                android:textColor="#74b1c5"
                android:id="@+id/talent_share_keyword1"
                android:background="@drawable/circularbtn_white"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginRight="10dp"
                android:text="+"/>

            <Button
                android:textColor="#74b1c5"
                android:id="@+id/talent_share_keyword2"
                android:background="@drawable/circularbtn_white"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginRight="10dp"
                android:text="+"/>
        </LinearLayout>
    </HorizontalScrollView>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_below="@id/Jang_Job_button"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>
