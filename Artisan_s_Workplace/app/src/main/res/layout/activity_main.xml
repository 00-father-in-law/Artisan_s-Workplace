<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="64dp"
        android:text="@string/login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"/>

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="64dp"
        android:text="@string/logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/Talent_Share_btn"
        android:layout_width="166dp"
        android:layout_height="154dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="372dp"
        android:text="@string/Talent_Share"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/NoIn_Job_btn"
        android:layout_width="166dp"
        android:layout_height="154dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="192dp"
        android:text="@string/NoIn_Job"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Jang_Job_btn"
        android:layout_width="166dp"
        android:layout_height="154dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="192dp"
        android:text="@string/Jang_job"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Edu_Pro_btn"
        android:layout_width="166dp"
        android:layout_height="154dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="372dp"
        android:text="@string/Edu_Pro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>