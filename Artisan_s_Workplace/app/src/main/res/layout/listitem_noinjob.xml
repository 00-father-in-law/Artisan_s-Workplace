<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="19dp"
    android:paddingRight="19dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/palegray"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp">

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black_sub"
            android:id="@+id/listitem_orgNm_noinjob"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="수행기관 명"
            android:maxLines="1"
            android:layout_weight="1"/>

        <ImageButton
            android:background="@drawable/img_hearf_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/black_sub"
        android:id="@+id/listitem_notiDate_noinjob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="모집기간"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/black_sub"
        android:id="@+id/listitem_workplace_noinjob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:maxLines="1"
        android:text="프로젝트 이름"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/black_sub"
        android:id="@+id/listitem_incnt_noinjob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="사업 기간"/>
</LinearLayout>