<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:scrollbars="none"
    android:fillViewport="true"
    tools:context=".Activity.SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/signup_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/img_back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="62dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:text="@string/SignUp"
                    android:textSize="26dp"
                    android:textColor="@color/black_main"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/signup_image_step1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_step1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/signup_image_step2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_step2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/signup_image_step3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_step3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/signup_step1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/id"
                    android:textSize="16dp"
                    android:textColor="@color/black_main"/>

                <EditText
                    android:id="@+id/signup_email_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="14dp"
                    android:hint="@string/inputemail"
                    android:inputType="textEmailAddress"
                    android:textSize="13dp"
                    android:background="@drawable/circulartext"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:text="@string/password"
                    android:textSize="16dp"
                    android:textColor="@color/black_main"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/signup_password_textlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/signup_password_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circulartext"
                        android:hint="@string/inputpassword"
                        android:inputType="textPassword"
                        android:padding="14dp"
                        android:textSize="13dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/passwordchk"
                    android:layout_marginTop="27dp"
                    android:textSize="16dp"
                    android:textColor="@color/black_main"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/signup_passwordchk_textlayout"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/signup_passwordchk_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circulartext"
                        android:hint="@string/inputpassword"
                        android:inputType="textPassword"
                        android:padding="14dp"
                        android:textSize="13dp" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/signup_step2_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/phoneNumber"
                    android:textSize="16dp"
                    android:textColor="@color/black_main"/>

                <EditText
                    android:id="@+id/signup_phone_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="14dp"
                    android:hint="@string/inputPhone"
                    android:inputType="phone"
                    android:textSize="13dp"
                    android:background="@drawable/circulartext"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/signup_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="5"
                        android:background="@drawable/circulartext"
                        android:hint="@string/inputcode"
                        android:padding="14dp"
                        android:textSize="13dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/signup_getcode"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/signup_codechk"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/img_check"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/signup_code"
                        app:layout_constraintHorizontal_bias="0.917"
                        app:layout_constraintStart_toStartOf="@+id/signup_code"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <Button
                        android:id="@+id/signup_getcode"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/circularbtn_white"
                        android:text="@string/getcode"
                        android:textSize="12dp"
                        android:textColor="@color/darkskyblue"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="@string/birthdate"
                    android:textSize="16dp"
                    android:textColor="@color/black_main"/>

                <RelativeLayout
                    android:id="@+id/signup_birthday_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/signup_birthday_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/select_birth"
                        android:background="@drawable/circulartext"
                        android:padding="14dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/img_drop_down"
                        android:layout_alignRight="@id/signup_birthday_txt"
                        android:layout_marginTop="19dp"
                        android:layout_marginRight="18dp"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="성별"
                    android:textSize="16dp"
                    android:textColor="@color/black_main"/>

                <RelativeLayout
                    android:id="@+id/signup_gender_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/signup_gender_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="성별을 선택해주세요."
                        android:background="@drawable/circulartext"
                        android:padding="14dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/img_drop_down"
                        android:layout_alignRight="@id/signup_gender_txt"
                        android:layout_marginTop="19dp"
                        android:layout_marginRight="18dp"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/signup_step3_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이용약관"
                    android:textSize="16dp"
                    android:textColor="@color/black_sub"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/circulartext"
                    android:padding="18dp"
                    android:text="sample text"
                    android:textColor="@color/gray_text"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/signup_agree"
                        android:buttonTint="@color/skyblue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="약관에 동의합니다."
                        android:textColor="#A79A9A"/>

                </LinearLayout>


            </LinearLayout>


            <Button
                android:id="@+id/signup_complete_btn"
                style="@style/BfrButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signup_next"
                android:layout_marginTop="110dp"
                android:layout_marginHorizontal="0dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/circularbtn_white"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>