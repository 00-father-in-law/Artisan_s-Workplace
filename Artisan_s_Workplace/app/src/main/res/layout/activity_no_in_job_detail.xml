<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="56dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/background_giftandstudy"
                android:padding="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/black_sub"
                    android:id="@+id/orgName_main_noinjobdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="운영기관 명"/>

                <TextView
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/black_sub"
                    android:id="@+id/workPlace_noinjobdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="사업 제목"/>

                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/black_sub"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/hpNotiEdate_noinjobdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="102dp"
                    android:text="접수기간: "/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:padding="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/img_first_letter_big"
                        android:layout_width="9dp" android:layout_height="14dp"/>

                    <TextView
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/black_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="모집 정보"/>

                </LinearLayout>

                <LinearLayout
                    android:background="@color/darkskyblue"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="13dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:textColor="@color/black_sub"
                            android:paddingLeft="13dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:textSize="16dp"
                            android:text="수행 기관명"/>

                        <TextView
                            android:textColor="@color/black_sub"
                            android:paddingLeft="13dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:textSize="16dp"
                            android:text="사업 년도"/>

                        <TextView
                            android:textColor="@color/black_sub"
                            android:paddingLeft="13dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:textSize="16dp"
                            android:text="모집 기간"/>

                        <TextView
                            android:textColor="@color/black_sub"
                            android:paddingLeft="13dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:textSize="16dp"
                            android:text="실시 인원"/>

                        <TextView
                            android:textColor="@color/black_sub"
                            android:paddingLeft="13dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:textSize="16dp"
                            android:text="유형"/>

                        <TextView
                            android:textColor="@color/black_sub"
                            android:paddingLeft="13dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:textSize="16dp"
                            android:text="구인 상태"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/orgName_content_noinjobdetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:textSize="16dp"
                            android:textColor="@color/gray_text"
                            android:text="수행 기관명"/>

                        <TextView
                            android:id="@+id/projYear_noinjobdetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:textColor="@color/gray_text"
                            android:textSize="16dp"

                            android:text="사업 년도"/>

                        <TextView
                            android:id="@+id/Notidate_noinjobdetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="@color/gray_text"
                            android:layout_marginTop="13dp"
                            android:text="모집 기간"/>

                        <TextView
                            android:id="@+id/intCnt_noinjobdetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="@color/gray_text"
                            android:layout_marginTop="13dp"
                            android:text="실시 인원"/>

                        <TextView
                            android:id="@+id/jobType_noinjobdetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="@color/gray_text"
                            android:layout_marginTop="13dp"
                            android:text="유형"/>

                        <TextView
                            android:id="@+id/trnStatNm_noinjobdetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="@color/gray_text"
                            android:layout_marginTop="13dp"
                            android:text="구인상태"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@color/palegray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:padding="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/img_first_letter_big"
                        android:layout_width="9dp"
                        android:layout_height="14dp"/>

                    <TextView
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/black_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="공고 내용"/>

                </LinearLayout>

                <LinearLayout
                    android:background="@color/darkskyblue"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="13dp"/>

                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black_sub"
                    android:id="@+id/hpCont_noinjobdetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:text="내용"/>

            </LinearLayout>
            <LinearLayout
                android:background="@color/palegray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:padding="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/img_first_letter_big"
                        android:layout_width="9dp"
                        android:layout_height="14dp"/>

                    <TextView
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/black_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="기관 위치"/>

                </LinearLayout>

                <LinearLayout
                    android:background="@color/darkskyblue"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="13dp"/>

                <TextView
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:textColor="@color/black_sub"
                    android:background="@drawable/circulartext"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="13dp"
                    android:text="지도자리(임시)"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right|center_vertical|center_horizontal|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/button_heart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:textSize="16dp"
            android:background="@color/white"
            android:textColor="@color/darkskyblue"
            android:text="찜하기" />

        <TextView
            android:id="@+id/button_noin_call"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="16dp"
            android:paddingVertical="12dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/skyblue"
            android:layout_height="wrap_content"
            android:text="지원하기" />
    </LinearLayout>

</FrameLayout>