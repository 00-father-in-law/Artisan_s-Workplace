<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#74B1C5</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:datePickerStyle">@style/myDatePickerStyle</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/test</item>
    </style>
    


<!--    BottomSheetDialog 라운드 처리 -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/circularbackground</item>
    </style>

<!--    datePicker Spinner-->
    <style name="myDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <!--전체적으로 적용되는 폰트 스타일-->
    <style name="TextViewStyle">
        <item name="android:textColor">@color/black_sub</item>
        <item name="android:textSize">14dp</item>
        <item name="android:includeFontPadding">false</item>
        <!--<item name="android:fontFamily">@font/font</item>-->
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <!--next btn-->
    <style name="BfrButton">
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:textColor">@color/darkskyblue</item>
        <item name="android:background">@drawable/circularbtn_20_blue_border</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AfrButton" parent="BfrButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/circularbtn_20_blue_solid</item>
    </style>
</resources>
